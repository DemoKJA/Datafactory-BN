{
	"name": "TEST_Grouping_Files_Child",
	"properties": {
		"activities": [
			{
				"name": "Until 5 per file",
				"type": "Until",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greaterOrEquals(variables('FileCount'),5)",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy data to folder",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BinarySource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true
									},
									"formatSettings": {
										"type": "BinaryReadSettings"
									}
								},
								"sink": {
									"type": "BinarySink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_ADLS_USER",
									"type": "DatasetReference",
									"parameters": {
										"container": "columbus",
										"directoy": {
											"value": "@concat('TESTGrouping/Group',variables('FolderNumber'))",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DS_ADLS_USER",
									"type": "DatasetReference"
								}
							]
						}
					],
					"timeout": "0.12:00:00"
				}
			}
		],
		"variables": {
			"FileCount": {
				"type": "String",
				"defaultValue": "1"
			},
			"FolderNumber": {
				"type": "String",
				"defaultValue": "1"
			},
			"TESTVar": {
				"type": "String"
			},
			"GISFolderName": {
				"type": "String",
				"defaultValue": "JustATest"
			}
		},
		"annotations": []
	}
}